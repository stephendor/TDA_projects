cmake_minimum_required(VERSION 3.14)
project(TDA_VectorizationExample CXX)

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# Add the executable
add_executable(vectorization_example
    ${CMAKE_CURRENT_SOURCE_DIR}/vectorization_storage_example_simplified.cpp
)

# Set include directories
target_include_directories(vectorization_example PRIVATE
    ${CMAKE_CURRENT_SOURCE_DIR}
)

# Install target
install(TARGETS vectorization_example
    RUNTIME DESTINATION bin
)
